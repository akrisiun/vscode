{
	"version": "0.1.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "Attach by Process ID",
			"processId": "${command:PickProcess}",
			"port": 9239,
			"protocol": "inspector"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Gulp Build",
			"program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
			"stopOnEntry": true,
			"args": [
				"hygiene"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch VS Code (Web)",
			"runtimeExecutable": "yarn",
			"runtimeArgs": [
				"web"
			],
			"stopOnEntry": false
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug :9239",
			"runtimeExecutable": "yarn",
			"runtimeArgs": [
				"debug"
			],
			"stopOnEntry": true
		},
		{
			"type": "chrome",
			"request": "attach",
			"name": "Attach to VS Code",
			"port": 9222
		},

		{
			"type": "chrome",
			"request": "launch",
			"name": "Launch VS Code (Web, Chrome)",
			"url": "http://localhost:8088",
			"preLaunchTask": "Run web"
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Extension Host",
			"port": 5870,
			"restart": true,
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			]
		}
	],
	"compounds": [
		{
			"name": "Debug VS Code Main and Renderer",
			"configurations": [
				"Launch VS Code (Web)",
				"Attach to VS Code"
			]
		}
	]
}
